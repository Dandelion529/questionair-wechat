textarea{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 999;
    padding-top: 20rpx;
    padding-left: 20rpx;
    width: 95%;
    height: 260rpx;
    font-size: 28rpx;
}

.inputView{
    /*边界：大小1px, 为固体，为绿色*/
    position: relative;
    top:0;
    left: 0;
    z-index: 99;
    border: 2rpx solid #ddd;
    border-radius: 10rpx;
    height: 260rpx;
}

.fontNum {
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    z-index: 999;
    color: #a29e9e;
    font-size: 28rpx;
}

